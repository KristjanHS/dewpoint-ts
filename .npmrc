# ==========================================
# Security Settings
# ==========================================

# Pin exact versions in package.json (no ^ or ~)
# Ensures reproducible builds across environments
save-exact=true

# Audit packages during install for known vulnerabilities
audit=true
audit-level=moderate

# ==========================================
# Performance & Reliability
# ==========================================

# Use package-lock.json strictly
# Prevents unexpected dependency updates
package-lock=true

# Prefer offline cached packages when available
# Speeds up installs and works better offline
prefer-offline=true

# Increase network timeout for slow connections
fetch-timeout=300000

# Retry failed network requests
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# ==========================================
# Dependency Management
# ==========================================

# Always save dependencies when installing
save=true

# Install peer dependencies automatically (npm 7+)
legacy-peer-deps=false

# Prevent installing if engines don't match
engine-strict=true

# ==========================================
# Development Experience
# ==========================================

# Show progress during install
progress=true

# Use color in output
color=true

# Set log level (silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=notice

# ==========================================
# Optional: Workspace Settings
# ==========================================

# Uncomment if using npm workspaces
# workspaces=true
# prefer-workspace-packages=true

# ==========================================
# Optional: Registry & Publishing
# ==========================================

# Default registry (already the default, but explicit)
registry=https://registry.npmjs.org/

# Prevent accidental publishing of private packages
# (already set in package.json but extra safety)
# publish=false

